<UserControl x:Class="IssuesHoneys.Core.Views.IssueAssigneeing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:coreViews="clr-namespace:IssuesHoneys.Core.Views">
    
    <Grid Grid.Column="2"
              Grid.ColumnSpan="3"
              Grid.Row="1"
              Margin="0,20,0,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <coreViews:DropDownAssignee  
            Grid.Column="0" 
            Grid.Row="0">
        </coreViews:DropDownAssignee>

        <Separator Grid.Column="0" 
                       Grid.Row="0"
                       Margin="0,0,5,0"
                       VerticalAlignment="Bottom">
        </Separator>

        <coreViews:DropDownLabels 
                   Grid.Column="0" 
                   Grid.Row="1">
        </coreViews:DropDownLabels>
        
        <Separator Grid.Column="0" 
                       Grid.Row="1"
                       Margin="0,0,5,0"
                       VerticalAlignment="Bottom">
        </Separator>

        <coreViews:DropDownProjects  
            Grid.Column="0" 
            Grid.Row="2">
        </coreViews:DropDownProjects>
      
        <Separator Grid.Column="0" 
                       Grid.Row="2"
                       Margin="0,0,5,0"
                       VerticalAlignment="Bottom">
        </Separator>

        <coreViews:DropDownMilestones  
            Grid.Column="0" 
            Grid.Row="3">

        </coreViews:DropDownMilestones>
    </Grid>
</UserControl>
