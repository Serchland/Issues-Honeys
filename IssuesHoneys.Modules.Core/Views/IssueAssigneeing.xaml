<UserControl x:Class="IssuesHoneys.Core.Views.IssueAssigneeing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:coreNameDef="clr-namespace:IssuesHoneys.Core.NameDefinition">
    
    <Grid Grid.Column="2"
              Grid.ColumnSpan="3"
              Grid.Row="1"
              Margin="0,20,0,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="{StaticResource LabelAssignes}"
                   Grid.Column="0" 
                   Grid.Row="0"
                   HorizontalAlignment="Left">
        </Label>

        <Label Grid.Column="0" 
                   Grid.Row="0"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0">
            <Label.Content>
                <iconPacks:PackIconUnicons Kind="Setting" />
            </Label.Content>

            <Label.InputBindings>
                <MouseBinding Command="{Binding DummyCommand}"
                              CommandParameter="{x:Static coreNameDef:CommandParameters.Assignes}"
                              MouseAction="LeftClick">
                </MouseBinding>
            </Label.InputBindings>
            
            <!--<Label.InputBindings>
                <MouseBinding Command="{Binding DummyCommand}" 
                                  CommandParameter="{x:Static coreNameDef:CommandParameters.Assignes}"
                                  MouseAction="LeftClick">
                </MouseBinding>
            </Label.InputBindings>-->
        </Label>
        <Separator Grid.Column="0" 
                       Grid.Row="0"
                       Margin="0,0,5,0"
                       VerticalAlignment="Bottom">
        </Separator>

        <Label Content="Labels"
                   Grid.Column="0"
                   Grid.Row="1"
                   HorizontalAlignment="Left">
        </Label>

        <Label Grid.Column="0" 
                   Grid.Row="1"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0">

            <Label.Content>
                <iconPacks:PackIconUnicons Kind="Setting" />
            </Label.Content>

            <!--<Label.InputBindings>
                <MouseBinding Command="{Binding DummyCommand}" 
                                  CommandParameter="{x:Static coreNameDef:CommandParameters.Labels}"
                                  MouseAction="LeftClick">
                </MouseBinding>

            </Label.InputBindings>-->
        </Label>

        <Separator Grid.Column="0" 
                       Grid.Row="1"
                       Margin="0,0,5,0"
                       VerticalAlignment="Bottom">
        </Separator>

        <Label Content="{StaticResource LabelProjects}" 
                   Grid.Column="0" 
                   Grid.Row="2"
                   HorizontalAlignment="Left">
        </Label>

        <Label Grid.Column="0" 
                   Grid.Row="2"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0">

            <Label.Content>
                <iconPacks:PackIconUnicons Kind="Setting" />
            </Label.Content>

            <!--<Label.InputBindings>
                <MouseBinding Command="{Binding DummyCommand}"            
                                  CommandParameter="{x:Static coreNameDef:CommandParameters.Projects}"
                                  MouseAction="LeftClick">
                </MouseBinding>
            </Label.InputBindings>-->
        </Label>

        <Separator Grid.Column="0" 
                       Grid.Row="2"
                       Margin="0,0,5,0"
                       VerticalAlignment="Bottom">
        </Separator>

        <Label Content="{StaticResource LabelMilestone}"
                   Grid.Column="0" 
                   Grid.Row="3"
                   HorizontalAlignment="Left">
        </Label>

        <Label Grid.Column="0" 
                   Grid.Row="3"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0">

            <Label.Content>
                <iconPacks:PackIconUnicons Kind="Setting" />
            </Label.Content>

            <!--<Label.InputBindings>
                <MouseBinding Command="{Binding DummyCommand}" 
                                  CommandParameter="{x:Static coreNameDef:CommandParameters.Milestones}"
                                  MouseAction="LeftClick">
                </MouseBinding>
            </Label.InputBindings>-->
        </Label>
    </Grid>
</UserControl>
