<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <!--Icons-->
    <BitmapImage x:Key="Issues_128_ico" UriSource="Images/Issues_128.ico" />
    <BitmapImage x:Key="Projects_128_ico" UriSource="Images/Projects_128.ico" />
    <BitmapImage x:Key="Issues_32_ico" UriSource="Images/Issues_32.ico" />
    <BitmapImage x:Key="Projects_32_ico" UriSource="Images/Projects_32.ico" />

    <!--Colors-->
    <Brush x:Key="MainBorderBrush">LightGray</Brush>

    <Style x:Key="IconStyle"
           TargetType="{x:Type Button}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <icons:PackIconModern Kind="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}, Path=Tag, Mode=OneWay}"
                                                  VerticalAlignment="Center" />

                        <TextBlock Margin="10 0 0 0"
                                   VerticalAlignment="Center"
                                   Text="{Binding}" />
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Texts--><!--
    <system:String x:Key="RibbonWindowTitle">Issues Honeys</system:String>
    <system:String x:Key="FirstRibbonTabItem">Home</system:String>
    <system:String x:Key="FirstRibbonGroupBox">Items</system:String>
    <system:String x:Key="IssuesButtonCaption">Issues</system:String>
    <system:String x:Key="ProjectsButtonCaption">Project</system:String>-->
</ResourceDictionary>